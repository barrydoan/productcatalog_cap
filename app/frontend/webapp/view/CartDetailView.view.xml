<mvc:View 
	xmlns:mvc="sap.ui.core.mvc" 
    xmlns:core="sap.ui.core"
	xmlns="sap.m" 
    xmlns:layout="sap.ui.layout"
	xmlns:tnt="sap.tnt" 
    xmlns:semantic="sap.f.semantic"
    xmlns:m="sap.m"
    xmlns:c="sap.ui.core"
	controllerName="frontend.controller.CartDetailView" 
	displayBlock="true">
    <semantic:SemanticPage
        id="page"
        headerPinnable="false"
        toggleHeaderOnTitleClick="false">

        <semantic:titleHeading>
            <Title text="Cart List" />
        </semantic:titleHeading>

        <semantic:titleBreadcrumbs>
			<Breadcrumbs>
				<Link href="#/" text="Home" />
                <Link href="#/carts" text="Cart List" />
                <Link href="#/cartdetail" text="Cart Detail" />
			</Breadcrumbs>
		</semantic:titleBreadcrumbs>

        <!-- Custom Title Icon Content-->
        <semantic:titleCustomIconActions>
            <MenuButton icon="sap-icon://cart" text="{baseModel>/cartInfo/cardNo}">
                <menu>
                    <Menu>
                        <MenuItem text="Select cart" icon="sap-icon://cart-approval" press=".onCartClicked"/>
                        <MenuItem text="Edit" icon="sap-icon://edit" press="onPress" />
                        <MenuItem text="Manage" icon="sap-icon://action-settings" press="onPress" />
                    </Menu>
                </menu>
            </MenuButton>
        </semantic:titleCustomIconActions><semantic:headerContent>
			<layout:HorizontalLayout allowWrapping="true">
				<layout:VerticalLayout class="sapUiMediumMarginEnd">
					<ObjectAttribute title="CartId" text="{cartDetailModel>/ID}"/>
					<ObjectAttribute title="CartNo" text="{cartDetailModel>/CardNo}"/>
					<ObjectAttribute title="Total" text="{cartDetailModel>/total}"/>
				</layout:VerticalLayout>
			</layout:HorizontalLayout>
		</semantic:headerContent>



        <semantic:content>
            <Table noDataText="No data" id="table" 
                items="{ path: 'cartItemsModel>/value' }"
                growing="true"
                growingScrollToLoad="true">
                <headerToolbar>
                    <Toolbar>
                        <Title id="tableHeader"
                            text="Products" />
                        <ToolbarSpacer />
                        
                    </Toolbar>
                </headerToolbar>
                <items >
                    <ColumnListItem type="Active" id="item0" press=".showCartDetail">
                        <cells>  
                            <HBox >
                                <Image src="img/{cartItemsModel>product/imageUrl}" width="50px" height="50px" />
                                <VBox>
                                    <Text text="{cartItemsModel>product/name}"/>
                                    <Text text="{cartItemsModel>product/shortId}"/>
                                    <Text text="{cartItemsModel>product/NDC}"/>
                                </VBox>
                            </HBox>
                            <Text text="{cartItemsModel>netAmount}"/>
                            <Input type="Number" width="1em" value="{cartItemsModel>amount}"/>
                            <HBox>
                                <Input
                                        class="hiden-field"
                                        name="cartItemId"
                                        value="{cartItemsModel>ID}"
                                     />
                                <Button icon="sap-icon://accept" type="Transparent" press=".onEditClicked"/>
                                <Button icon="sap-icon://delete" type="Transparent" press=".onDeleteClicked"/>
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
                <columns>
                    <Column>
                        <header>
                            <Label text="Description"/>
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="Price"/>
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="Quantity"/>
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="Action"/>
                        </header>
                    </Column>

                </columns>
            </Table>
        </semantic:content>
    </semantic:SemanticPage>
</mvc:View>