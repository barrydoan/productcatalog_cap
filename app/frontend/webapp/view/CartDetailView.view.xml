<mvc:View 
	xmlns:mvc="sap.ui.core.mvc" 
    xmlns:core="sap.ui.core"
	xmlns="sap.m" 
    xmlns:layout="sap.ui.layout"
	xmlns:tnt="sap.tnt" 
    xmlns:semantic="sap.f.semantic"
	controllerName="frontend.controller.CartDetailView" 
	displayBlock="true">
    <semantic:SemanticPage
        id="page"
        headerPinnable="false"
        toggleHeaderOnTitleClick="false">

        <semantic:titleHeading>
            <Title text="Cart List" />
        </semantic:titleHeading>

        <semantic:titleBreadcrumbs>
			<Breadcrumbs>
				<Link href="#/" text="Home" />
                <Link href="#/carts" text="Cart List" />
			</Breadcrumbs>
		</semantic:titleBreadcrumbs>

        <!-- Custom Title Icon Content-->
        <semantic:titleCustomIconActions>
            <MenuButton icon="sap-icon://cart" text="{baseModel>/cartInfo/cardNo}">
                <menu>
                    <Menu>
                        <MenuItem text="Select cart" icon="sap-icon://cart-approval" press=".onCartClicked"/>
                        <MenuItem text="Edit" icon="sap-icon://edit" press="onPress" />
                        <MenuItem text="Manage" icon="sap-icon://action-settings" press="onPress" />
                    </Menu>
                </menu>
            </MenuButton>
        </semantic:titleCustomIconActions><semantic:headerContent>
			<layout:HorizontalLayout allowWrapping="true">
				<layout:VerticalLayout class="sapUiMediumMarginEnd">
					<ObjectAttribute title="CartId" text="{cartDetailModel>/ID}"/>
					<ObjectAttribute title="CartNo" text="{cartDetailModel>/CardNo}"/>
					<ObjectAttribute title="Total" text="{cartDetailModel>/total}"/>
				</layout:VerticalLayout>
			</layout:HorizontalLayout>
		</semantic:headerContent>



        <semantic:content>
            <Table noDataText="No data" id="table" 
                items="{ path: 'cartDetailModel>/Items' }"
                growing="true"
                growingScrollToLoad="true">
                
                <items >
                    <ColumnListItem type="Active" id="item0" press=".showCartDetail">
                        <cells>  
                            <Text text="{cartDetailModel>product_ID}"/>
                            <Text text="{cartDetailModel>amount}"/>
                            <Text text="{cartDetailModel>netAmount}"/>
                        </cells>
                    </ColumnListItem>
                </items>
                <columns>
                    <Column>
                        <header>
                            <Label text="ProductId"/>
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="Quantity"/>
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="Amount"/>
                        </header>
                    </Column>
                </columns>
            </Table>
        </semantic:content>
    </semantic:SemanticPage>
</mvc:View>