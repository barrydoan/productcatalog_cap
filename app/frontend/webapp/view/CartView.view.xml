<mvc:View 
	xmlns:mvc="sap.ui.core.mvc" 
    xmlns:core="sap.ui.core"
	xmlns="sap.m" 
	xmlns:tnt="sap.tnt" 
    xmlns:semantic="sap.f.semantic"
	controllerName="frontend.controller.CartView" 
	displayBlock="true">
    <semantic:SemanticPage
        id="page"
        headerPinnable="false"
        toggleHeaderOnTitleClick="false">

        <semantic:titleHeading>
            <Title text="Cart List" />
        </semantic:titleHeading>

        <semantic:titleBreadcrumbs>
			<Breadcrumbs>
				<Link href="#/" text="Home" />
                <Link href="#/carts" text="Cart List" />
			</Breadcrumbs>
		</semantic:titleBreadcrumbs>

        <!-- Custom Title Icon Content-->
        <semantic:titleCustomIconActions>
            <MenuButton icon="sap-icon://cart" text="{baseModel>/cartInfo/cardNo}">
                <menu>
                    <Menu>
                        <MenuItem text="Select cart" icon="sap-icon://cart-approval" press=".onCartClicked"/>
                        <MenuItem text="Edit" icon="sap-icon://edit" press="onPress" />
                        <MenuItem text="Manage" icon="sap-icon://action-settings" press="onPress" />
                    </Menu>
                </menu>
            </MenuButton>
        </semantic:titleCustomIconActions>

        <semantic:content>
            <Table noDataText="No data" id="table" 
                items="{      
                    path: '/Carts',     
                    sorter: {       
                        path: 'CardNo'      
                    }
                    }"
                growing="true"
                growingScrollToLoad="true">
                
                <items>
                    <ColumnListItem type="Active" id="item0">
                        <cells>  
                            <Text text="{ID}"/>
                            <Text text="{CardNo}"/>
                            <Text text="{total}"/>
                        </cells>
                    </ColumnListItem>
                </items>
                <columns>
                    <Column>
                        <header>
                            <Label text="ID"/>
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="CartNo"/>
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="Total"/>
                        </header>
                    </Column>
                </columns>
            </Table>
        </semantic:content>
    </semantic:SemanticPage>
</mvc:View>