{
  "name": "productcatalog",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": ">=5",
    "express": "^4",
    "hdb": "^0.19.0"
  },
  "devDependencies": {
    "@sap/ux-specification": "^1.102.3",
    "sqlite3": "^5.0.4",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "start": "cds run",
    "watch-testproject": "cds watch --open testproject/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-admin": "cds watch --open admin/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-frontend": "cds watch --open frontend/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy productcatalog --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "hana",
        "credentials": {
          "database": "sqlite.db"
        }
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  },
  "sapux": [
    "app/frontend"
  ]
}